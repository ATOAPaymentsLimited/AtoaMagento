                       as="banner.content"
                       template="Atoa_AtoaPayment::banner/banner-content.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">
                            Atoa\AtoaPayment\ViewModel\Display
                        </argument>
                    </arguments>
                </block>
                <arguments>
                    <argument name="view_model" xsi:type="object">
                        Atoa\AtoaPayment\ViewModel\Display
                    </argument>
                </arguments>
            </block>
            <block name="category.product.type.details.renderers.virtual" as="virtual"
                   before="-"
                   ifconfig="payment/atoa/atoa_display_settings/enable_banner_product_listing"
                   template="Atoa_AtoaPayment::banner/product-listing.phtml">
                <block name="category.product.type.details.renderers.virtual.banner.content"
                       as="banner.content"
                       template="Atoa_AtoaPayment::banner/banner-content.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">
                            Atoa\AtoaPayment\ViewModel\Display
                        </argument>
                    </arguments>
                </block>
                <arguments>
                    <argument name="view_model" xsi:type="object">
                        Atoa\AtoaPayment\ViewModel\Display
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
